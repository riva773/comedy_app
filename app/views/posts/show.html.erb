<div class="container-fluid">
  <div class="row my-4">
    <div class="col-md-3 border-end">
      <%= render partial: "shared/sidebar" %>
    </div>
    <div class="col-md-6">
      <%= render partial: "shared/posts", locals: { post: @post }%>
      <%= render partial: "shared/comment_form", locals: { post: @post, comment: @comment }%>
      <%= render partial: "shared/comments", locals: { post: @post, comment: @comment, user: @user } %>
    </div>
    <div class="col-md-3">
      <%= render partial: "shared/form" %>
    </div>
  </div>
</div>