<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <%= render partial: "shared/sidebar" %>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-6 my-5">
      <div class="content bg-white p-4 rounded shadow-sm">
        <div class="text-center mb-4">
          <% if @user.avatar.persisted? && @user.avatar.attached? %>
            <%= image_tag @user.avatar, size: "100x100", class: "rounded-circle mb-3 mx-auto" %>
          <% end %>
        </div>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <ul>
              <% resource.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: @user, url: registration_path(resource_name), local: true, html: { method: :put, multipart: true }) do |f| %>
          <div class="mb-3">
            <%= f.label :avatar, class: 'form-label' %>
            <%= f.file_field :avatar, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :nickname, class: 'form-label' %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>

          <div class="mb-3">
            <%= f.label :profile, class: 'form-label' %>
            <%= f.text_area :profile, class: 'form-control' %>
          </div>

          <div class="actions text-center">
            <%= f.submit "変更", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>
