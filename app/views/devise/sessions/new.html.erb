<h2 class="text-center my-4" >Log in</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label'%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', required: true, placeholder: "メールアドレスを入力してください" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required: true, placeholder: "パスワードを入力してください" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-1 text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: 'form-label', required: true%>
          </div>
        <% end %>

        <div class="mb-3 text-center d-grid">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>