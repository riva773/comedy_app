<div class="border my-3">
  <div class="d-flex ms-3 align-items-center my-3">
    <%= image_tag 'dummy_profile_image', class: "rounded-circle ms-3" %>
    <p class="ms-4">ユーザー名</p>
    
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <%= link_to "フォロー解除", user_follows_path(user), data: { turbo_method: "delete" }, class: "ms-auto me-5 btn btn-primary unfollow-btn" %>
      <% else %>
        <%= link_to "フォロー", user_follows_path(user), data: { turbo_method: "post" }, class: "ms-auto me-5 btn btn-primary follow_btn" %>
      <% end %>
