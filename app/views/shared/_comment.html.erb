<% if comment.nil? %>
  <p> comment is nil </p>
<% elsif comment.user.nil? %>
  <p> comment.user is nil </p>
<% else %>


<div class="mb-3 container">
  <div class="row">
    <div class="col-md-1">
      <%= image_tag comment.user.avatar, size: "50x50", class: "rounded-circle" %>
    </div>
    <div class="col-md-11 my-auto">
      <%= comment.user.nickname %>
    </div>
  </div>
 
  <div class="row">
    <div class="col-md-1">
      
    </div>
    <div class="col-md-11">
      <%= comment.content%>
    </div>
  </div>
</div>
<% end %>