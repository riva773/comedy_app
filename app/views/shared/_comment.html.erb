<% if comment.user.nil? %>
  <p> comment.user is nil</p>
<% else %>
<div class="mb-3 container">
  <div class="row">
    <div class="col-md-1">
      <%= link_to user_path(comment.user), class: "cutom-link" do %>
        <%= image_tag comment.user.avatar, size: "50x50", class: "rounded-circle" if comment.user.avatar.attached? %>
      <% end %>
    </div>
    <div class="col-md-11 my-auto">
      <%= link_to comment.user.nickname, user_path(comment.user), class: "custom-link" %>
    </div>
  </div>
 
  <div class="row">
    <div class="col-md-1">     
    </div>
    <div class="col-md-11">
      <p><%= comment.content %></p>
    </div>
  </div>
</div>
<% end %>
