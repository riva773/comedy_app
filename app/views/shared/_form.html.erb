<div class="container border">
  <div class="row justify-content-center">
    <div class="col-md-12 my-4">

      <% if user_signed_in?%>
       <%= render partial: "shared/user_avatar_nickname"  %>
      <% end %>

      <%= form_with model: post, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :content, class: 'form-label' %>
          <%= f.text_area :content, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :genre, class: 'form-label' %>
          <%= f.select :genre, Post.genres.keys.map,{}, class: 'form-select' %>
        </div>

        <div class="mb-3">
          <%= label_tag :tag_name, 'タグ', class: 'form-label' %>(,区切りで複数個登録できます) <br/>
          <%= text_field_tag :tag_name, tag_name, class: 'form-control' %>
        </div>

        <div class="text-center">
          <%= f.submit 'post', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
