<div class="container-fluid mb-250">
  <div class="row my-4">
    <div class="col-md-2 col-sm-12">
      <%= render partial: "shared/sidebar" %>
    </div>
    <div class="col-md-9 col-sm-12">
      <div class="row row-cols-1 row-cols-md-2 g-4 me-4 mb-3">
        <% @ogiri_topics.each do |ogiri_topic| %>
          <div class="col">
            <%= render partial: "shared/ogiri_topic", locals: { ogiri_topic: ogiri_topic } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="fixed-bottom bg-light pt-3 pb-5 border-top">
  <div class="container">
    <div class="row">
      <div class="col-md-7 col-sm-12 mx-auto">
        <%= form_with model: @ogiri_topic, url: ogiri_topics_path, method: :post, local: true, class: "topic-form border p-4 rounded shadow-sm" do |form| %>
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center">
              <%= form.label :content, "大喜利のお題", class: "form-label" %>
              <p class="text-muted">(42文字まで)</p>
            </div>
            <%= form.text_area :content, class: "form-control", maxlength: "42" %>
          </div>

          <div class="d-grid gap-2">
            <%= form.submit "作成する", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
